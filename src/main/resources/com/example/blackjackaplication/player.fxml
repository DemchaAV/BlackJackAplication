<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.blackjackaplication.PlayerController">
    <children>
        <Pane fx:id="player" prefHeight="100.0" prefWidth="305.0">
            <children>
                <VBox alignment="CENTER" prefHeight="260.0" prefWidth="305.0">
                    <children>
                        <Label fx:id="nameLabel" alignment="TOP_CENTER" contentDisplay="TOP" prefHeight="35.0"
                               prefWidth="248.0" text="Artem" textFill="#f8f7f7">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </Label>
                        <HBox fx:id="balanceHold">
                            <children>
                                <ImageView fitHeight="44.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@img/balance/coins_white.png"/>
                                    </image>
                                </ImageView>
                                <Label fx:id="balanceLabel" contentDisplay="TOP" prefHeight="36.0" prefWidth="55.0"
                                       textFill="#f8f7f7">
                                    <font>
                                        <Font name="Comic Sans MS Bold" size="18.0"/>
                                    </font>
                                    <opaqueInsets>
                                        <Insets left="25.0" right="25.0"/>
                                    </opaqueInsets>
                                    <HBox.margin>
                                        <Insets left="10.0"/>
                                    </HBox.margin>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <HBox fx:id="cardHoldBacket" alignment="CENTER" prefHeight="134.0" prefWidth="103.0"/>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </children>
        </Pane>
    </children>
</VBox>
